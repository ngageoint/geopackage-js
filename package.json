{
  "name": "@ngageoint/geopackage",
  "version": "2.0.9",
  "description": "GeoPackage JavaScript Library",
  "keywords": [
    "NGA",
    "geopackage"
  ],
  "license": "MIT",
  "author": {
    "name": "NGA",
    "url": "https://www.nga.mil"
  },
  "contributors": [
    "Daniel Barela <daniel.barela@gmail.com>"
  ],
  "homepage": "http://ngageoint.github.io/geopackage-js/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngageoint/geopackage-js.git"
  },
  "bugs": {
    "url": "https://github.com/ngageoint/geopackage-js/issues"
  },
  "bin": "./cli",
  "dependencies": {
    "@mapbox/tilebelt": "^1.0.1",
    "@mapbox/vector-tile": "^1.3.1",
    "@turf/bbox": "^3.14.0",
    "@turf/boolean-point-in-polygon": "^6.0.1",
    "@turf/boolean-within": "^6.0.1",
    "@turf/circle": "^6.0.1",
    "@turf/distance": "^6.0.1",
    "@turf/intersect": "^6.1.2",
    "@turf/line-intersect": "^6.0.2",
    "@turf/point-to-line-distance": "^6.0.0",
    "@turf/polygon-to-line": "^6.0.3",
    "better-sqlite3": "5.4.0",
    "canvas": "^2.6.0",
    "concat-stream": "^1.6.0",
    "d3-geo": "^1.10.0",
    "file-type": "8.1.0",
    "geojson-vt": "^3.2.0",
    "pbf": "^3.1.0",
    "proj4": "2.4.3",
    "rbush": "2.0.2",
    "reproject": "1.2.2",
    "sql.js": "https://github.com/danielbarela/sql.js.git",
    "vt-pbf": "^3.1.1",
    "wkx": "0.4.4"
  },
  "devDependencies": {
    "babel-polyfill": "^6.23.0",
    "browserify": "^14.1.0",
    "browserify-css": "^0.10.0",
    "canvas-compare": "https://github.com/caldwellc/canvas-compare.git",
    "chai": "^3.5.0",
    "coveralls": "^3.0.0",
    "foodoc": "0.0.9",
    "fs-extra": "^2.1.2",
    "jsdoc": "^3.6.3",
    "lcov-badge": "^1.0.4",
    "mocha": "^6.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^10.0.2",
    "nyc": "^13.1.0",
    "uglify-es": "^3.0.27",
    "watchify": "^3.7.0",
    "webworkify": "^1.1.0",
    "xhr-mock": "^2.4.1"
  },
  "optionalDependencies": {
    "chalk": "^1.1.3",
    "inquirer": "^1.0.2"
  },
  "main": "index.js",
  "files": [
    "index.js",
    "static/geopackage.js",
    "cli",
    "lib",
    "converters",
    "dist"
  ],
  "browser": {
    "sqlite3": false
  },
  "nyc": {
    "temp-dir": "./.test_run",
    "report-dir": "./docs/coverage",
    "reporter": [
      "lcov"
    ]
  },
  "scripts": {
    "clean": "rm -rf ./.test_run; rm -rf ./.nyc_output; rm -rf ./docs/coverage",
    "test-sqlnode": "nyc --no-clean mocha",
    "test-sqljs": "FORCE_SQLJS=true nyc --no-clean mocha",
    "build-browser-test": "browserify ./test/test.js --standalone tests --exclude better-sqlite3 --exclude inquirer  --exclude canvas -o bundle/test.bundle.js -d",
    "test": "npm run clean && npm run test-sqlnode && npm run test-sqljs && npm run report",
    "report": "nyc report",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "predoc": "rm -rf docs/jsdoc/*; ./docs/tutorials/createTutorials.js",
    "doc": "jsdoc --verbose -c jsdoc.conf",
    "build": "browserify -t browserify-css index.js --standalone geopackage --exclude better-sqlite3 --exclude inquirer --exclude canvas -o static/geopackage.js",
    "watch": "watchify -t browserify-css index.js -v --standalone geopackage --exclude better-sqlite3 --exclude inquirer --exclude canvas -o static/geopackage.js",
    "prepublish": "mkdir dist; browserify -t browserify-css index.js --standalone geopackage --exclude better-sqlite3 --exclude inquirer --exclude canvas -o dist/geopackage.js && uglifyjs dist/geopackage.js > dist/geopackage.min.js"
  }
}
